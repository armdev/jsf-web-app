<?xml version="1.0"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
            http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
              version="2.2">
    
    <lifecycle>       
        <phase-listener>
            com.project.web.handlers.AuthenticationPhaseListener
        </phase-listener>
    </lifecycle>
    <factory>
        <exception-handler-factory>com.project.web.handlers.ViewExpiredExceptionExceptionHandlerFactory</exception-handler-factory>
    </factory>
    <!--    <factory>
        <exception-handler-factory>com.progress.web.listeners.ViewExpiredExceptionExceptionHandlerFactory</exception-handler-factory>
    </factory>-->
    <application>     
        <!--        <state-manager>com.project.web.handlers.CustomStateManager</state-manager> -->
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>                  
    </application>
    <application>
        <locale-config>
            <default-locale>hy</default-locale>      
            <supported-locale>ru_RU</supported-locale>      
            <supported-locale>en_EN</supported-locale>            
        </locale-config>    
        <resource-bundle>
            <base-name>i18n</base-name>
            <var>i18n</var>        
        </resource-bundle>
        <resource-bundle>
            <base-name>file</base-name>
            <var>file</var>        
        </resource-bundle>
        <resource-bundle>
            <base-name>access</base-name>
            <var>accessProp</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>confirmationMessages</base-name>
            <var>confirmMsgs</var>            
        </resource-bundle>
        <resource-bundle>
            <base-name>mail</base-name>
            <var>mailProps</var>
        </resource-bundle>
        <message-bundle>
            messages
        </message-bundle>        
        <resource-library-contracts>
            <contract-mapping>
                <url-pattern>/pages/user/*</url-pattern>
                <contracts>user</contracts>                
            </contract-mapping>              
            <contract-mapping>
                <url-pattern>*</url-pattern>
                <contracts>default</contracts>
            </contract-mapping>
        </resource-library-contracts>  
    </application>
    <navigation-rule>        
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>activationlink</from-outcome>
            <to-view-id>/pages/activationlink.xhtml</to-view-id>
            <redirect/>
        </navigation-case>     
        <navigation-case>
            <from-outcome>profile</from-outcome>
            <to-view-id>/pages/user/profile.xhtml</to-view-id>
            <redirect/>
        </navigation-case>     
        <navigation-case>
            <from-outcome>viewExpired</from-outcome>
            <to-view-id>/errorpages/viewexpired.xhtml</to-view-id>
            <redirect/>
        </navigation-case>      
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>   
        <navigation-case>
            <from-outcome>clearcategory</from-outcome>
            <to-view-id>/pages/category/createcategory.xhtml</to-view-id>
            <redirect/>
        </navigation-case>   
        <navigation-case>
            <from-outcome>categoryBack</from-outcome>
            <to-view-id>/pages/category/createcategory.xhtml</to-view-id>
            <redirect/>
        </navigation-case>   
        <navigation-case>
            <from-outcome>grouplist</from-outcome>
            <to-view-id>/pages/group/grouplist.xhtml</to-view-id>
            <redirect/>
        </navigation-case>     
        <navigation-case>
            <from-outcome>find</from-outcome>
            <to-view-id>/pages/settings/find.xhtml</to-view-id>
            <redirect/>
        </navigation-case>    
        <navigation-case>
            <from-outcome>pages</from-outcome>
            <to-view-id>/pages/settings/pages.xhtml</to-view-id>
            <redirect/>
        </navigation-case>    
        <navigation-case>
            <from-outcome>findall</from-outcome>
            <to-view-id>/pages/settings/findall.xhtml</to-view-id>
            <redirect/>
        </navigation-case>   
        <navigation-case>
            <from-outcome>newslist</from-outcome>
            <to-view-id>/pages/settings/newslist.xhtml</to-view-id>
            <redirect/>
        </navigation-case>     
          <navigation-case>
            <from-outcome>metatags</from-outcome>
            <to-view-id>/pages/settings/metatags.xhtml</to-view-id>
            <redirect/>
        </navigation-case>     
            <navigation-case>
            <from-outcome>catalog</from-outcome>
            <to-view-id>/pages/catalog/catalog.xhtml</to-view-id>
            <redirect/>
        </navigation-case> 
               
    </navigation-rule>  
</faces-config>